# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
  name = jp7fkf
  email = jp7fkf@gmail.com
[core]
  excludesfile = ~/.gitignore_global
  compression = 9
  symlinks = true
  quotepath = false
[colur]
  ui = true
[alias]
  delete-merged-branch = "!f () { git checkout $1; git branch --merged | egrep -v '(\\*|dev|master)' | xargs git branch -d; }; f"
  graph = log -n 30 --graph --date=short --decorate=short --pretty=format:'%C(Yellow)%h %Creset%cd %Cgreen%cn %C(Cyan)%d %Creset%s'
  difff = diff --word-diff
  co = checkout
  st = status
  br = branch
  ci = commit
  lo = log --oneline
[pull]
  ff = only
[push]
  default = current
  followTags = true
[fetch]
  prune = true
  pruneTags = true
[init]
  defaultBranch = main
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[ssh]
  postBuffer = 2048M
  maxRequestBuffer = 1024M
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	keepBackup = false
	prompt = false
[ghq]
	root = ~/ghq
